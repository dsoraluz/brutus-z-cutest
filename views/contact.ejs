<section id="contact-section" class="center-align">
  <h1>CONTACT</h1>
  <div class="hide-on-med-and-up">
    <div class="picture mobile-picture">
      <img src="./images/brutus-sitting.jpg" />

    </div>
  </div>
  <div class="row content-wrapper">
    <div class="col l6 m6 s12 email">

      <p>
        Brutus is represented by his owner, Jonathan Sterritt, and is available for your next project!
        Bark at Brutus using the form below!
      </p>
      <br />
      <br />

      <form action="/contact" method="post">
        <div class="input-field">
          <label for="name">What is your name? *</label>
          <input id="name" type="text" class="validate" name="name"/>
        </div>
        <div class="input-field">
          <label for="email">What is your email? *</label>
          <input id="email" type="text" class="validate" name="email"/>

        </div>
        <div class="input-field">
          <label for="message">Throw me a bone. *</label>
          <input id="message" type="text" class="validate" name="message" placeholder="How can we collaborate?"/>

        </div>
        <button id="send-button" class="btn waves-effect #424242 grey darken-3" type="submit">Send Message</button>

      </form>

    </div>
    <div class="col s6 hide-on-med-and-down">
      <div class="picture">
        <img src="./images/brutus-sitting.jpg" />

      </div>
    </div>
  </div>
</section>
